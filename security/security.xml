<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="module_category_website_ai_chat" model="ir.module.category">
        <field name="name">Website AI Chat</field>
        <field name="description">Access rights for the Website AI Chat module.</field>
        <field name="sequence">115</field>
    </record>

    <record id="group_ai_chat_user" model="res.groups">
        <field name="name">Website AI Chat / User</field>
        <field name="category_id" ref="module_category_website_ai_chat"/>
        <field name="comment">Users in this group can access and use the AI chat widget on the website.</field>
    </record>

    <record id="group_ai_chat_admin" model="res.groups">
        <field name="name">Website AI Chat / Admin</field>
        <field name="category_id" ref="module_category_website_ai_chat"/>
        <field name="implied_ids" eval="[(4, ref('website_ai_chat_min.group_ai_chat_user'))]"/>
        <field name="comment">Admins can configure the AI chat and also use it.</field>
    </record>

</odoo>
