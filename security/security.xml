<odoo>
  <!-- User group: can see and use the widget -->
  <record id="group_ai_chat_user" model="res.groups">
    <field name="name">Website AI Chat / User</field>
    <field name="category_id" ref="base.module_category_website"/>
    <field name="comment">Users in this group can access the AI chat widget.</field>
  </record>

  <!-- Admin group: can configure settings (implies user) -->
  <record id="group_ai_chat_admin" model="res.groups">
    <field name="name">Website AI Chat / Admin</field>
    <field name="category_id" ref="base.module_category_website"/>
    <field name="implied_ids" eval="[(4, ref('website_ai_chat_min.group_ai_chat_user'))]"/>
    <field name="comment">Admins can configure the AI chat and also use it.</field>
  </record>
</odoo>
