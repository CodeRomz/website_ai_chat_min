<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- =====================================================
         aic.user – Form View
         ===================================================== -->

    <record id="aic_user_view_form" model="ir.ui.view">
        <field name="name">aic.user.form</field>
        <field name="model">aic.user</field>
        <field name="arch" type="xml">
            <form string="AI Chat Admin">
                <sheet>
                    <header>
                        <!-- Boolean active: simple toggle is fine -->
                        <field name="active"/>
                    </header>

                    <group>
                        <field name="aic_user_id"
                               required="1"
                               options="{'no_create_edit': True, 'no_create': True}"/>
                    </group>

                    <notebook>
                        <page string="Model List and Limits">
                            <field name="aic_line_ids">
                                <tree editable="bottom" string="Per-Model Limits" decoration-muted="not active">
                                    <field name="active"/>
                                    <field name="aic_model_id" required="1"/>
                                    <field name="aic_prompt_limit" required="1"/>
                                    <field name="aic_tokens_per_prompt" required="1"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>

                <!-- chatter (mail.thread + mail.activity.mixin) -->
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- =====================================================
         aic.user – Tree View
         ===================================================== -->

    <record id="aic_user_view_tree" model="ir.ui.view">
        <field name="name">aic.user.tree</field>
        <field name="model">aic.user</field>
        <field name="arch" type="xml">
            <tree string="AI Chat Admin" decoration-muted="not active">
                <field name="active"/>
                <field name="aic_user_id"/>
                <field name="aic_line_ids" string="Gemini Model List" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <!-- =====================================================
         aic.user – Search View
         ===================================================== -->

    <record id="aic_user_view_search" model="ir.ui.view">
        <field name="name">aic.user.search</field>
        <field name="model">aic.user</field>
        <field name="arch" type="xml">
            <search string="AI Chat Admin">
                <field name="aic_user_id"/>
                <filter name="filter_active"
                        string="Active"
                        domain="[('active', '=', True)]"/>
                <filter name="filter_inactive"
                        string="Inactive"
                        domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <!-- =====================================================
         Action – Open aic.user
         ===================================================== -->

    <record id="aic_user_action" model="ir.actions.act_window">
        <field name="name">AI Chat Admin</field>
        <field name="res_model">aic.user</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="aic_user_view_tree"/>
        <field name="search_view_id" ref="aic_user_view_search"/>
        <field name="help" type="html">
            <p>
                Configure which users can use the AI chat and define
                per-model prompt and token limits.
            </p>
        </field>
    </record>

    <!-- =====================================================
         Menus
         ===================================================== -->

    <menuitem id="aic_menu_ai_admin"
              name="User Limits"
              parent="aic_menu_ai_root"
              action="aic_user_action"
              sequence="10"
              groups="group_ai_chat_admin"/>
</odoo>
