<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- =====================================================
         aic.gemini_list – Form View
         ===================================================== -->

    <record id="aic_gemini_list_view_form" model="ir.ui.view">
        <field name="name">aic.gemini_list.form</field>
        <field name="model">aic.gemini_list</field>
        <field name="arch" type="xml">
            <form string="Gemini Model">
                <sheet>
                    <group>
                        <field name="aic_gemini_model" required="1"/>
                    </group>
                </sheet>

                <!-- chatter (mail.thread + mail.activity.mixin) -->
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- =====================================================
         aic.gemini_list – Tree View
         ===================================================== -->

    <record id="aic_gemini_list_view_tree" model="ir.ui.view">
        <field name="name">aic.gemini_list.tree</field>
        <field name="model">aic.gemini_list</field>
        <field name="arch" type="xml">
            <tree string="Gemini Model List">
                <field name="aic_gemini_model"/>
            </tree>
        </field>
    </record>

    <!-- Action – Open aic.gemini_list -->

    <record id="aic_gemini_list_action" model="ir.actions.act_window">
        <field name="name">Gemini Model List</field>
        <field name="res_model">aic.gemini_list</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="aic_gemini_list_view_tree"/>
        <field name="help" type="html">
            <p>
                Configure Gemini Model.
            </p>
        </field>
    </record>

    <!-- Menu – aic.gemini_list -->

    <menuitem id="aic_menu_gemini_list"
              name="Gemini Model List"
              parent="aic_menu_configuration"
              action="aic_gemini_list_action"
              sequence="10"
              groups="group_ai_chat_admin"/>

    <!-- =====================================================
         aic.api_key_list – Form View
         ===================================================== -->

    <record id="aic_api_key_list_view_form" model="ir.ui.view">
        <field name="name">aic.api_key_list.form</field>
        <field name="model">aic.api_key_list</field>
        <field name="arch" type="xml">
            <form string="API Key">
                <sheet>
                    <group>
                        <field name="name" required="1"/>
                        <field name="api_key" required="1" password="True"/>
                    </group>
                </sheet>

                <!-- chatter -->
                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- aic.api_key_list – Tree View -->

    <record id="aic_api_key_list_view_tree" model="ir.ui.view">
        <field name="name">aic.api_key_list.tree</field>
        <field name="model">aic.api_key_list</field>
        <field name="arch" type="xml">
            <tree string="API Key List">
                <field name="name"/>
                <field name="api_key" password="true"/>
            </tree>
        </field>
    </record>

    <!-- Action – aic.api_key_list -->

    <record id="aic_api_key_list_action" model="ir.actions.act_window">
        <field name="name">API Key List</field>
        <field name="res_model">aic.api_key_list</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="aic_api_key_list_view_tree"/>
        <field name="help" type="html">
            <p>
                Configure API Key.
            </p>
        </field>
    </record>

    <!-- Menu – aic.api_key_list -->

    <menuitem id="aic_menu_api_key_list"
              name="API Keys"
              parent="aic_menu_configuration"
              action="aic_api_key_list_action"
              sequence="20"
              groups="group_ai_chat_admin"/>

    <!-- =====================================================
         aic.file_store_id – Form View
         ===================================================== -->

    <record id="aic_file_store_id_view_form" model="ir.ui.view">
        <field name="name">aic.file_store_id.form</field>
        <field name="model">aic.file_store_id</field>
        <field name="arch" type="xml">
            <form string="File Store ID">
                <sheet>
                    <group>
                        <field name="name" required="1"/>
                        <field name="file_store_id" required="1"/>
                    </group>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <!-- aic.file_store_id – Tree View -->

    <record id="aic_file_store_id_view_tree" model="ir.ui.view">
        <field name="name">aic.file_store_id.tree</field>
        <field name="model">aic.file_store_id</field>
        <field name="arch" type="xml">
            <tree string="File Store IDs">
                <field name="name"/>
                <field name="file_store_id"/>
            </tree>
        </field>
    </record>

    <!-- Action – aic.file_store_id -->

    <record id="aic_file_store_id_action" model="ir.actions.act_window">
        <field name="name">File Store IDs</field>
        <field name="res_model">aic.file_store_id</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="aic_file_store_id_view_tree"/>
        <field name="help" type="html">
            <p>
                Maintain Gemini File Store IDs used for File Search.
            </p>
        </field>
    </record>

    <!-- Menu – aic.file_store_id -->

    <menuitem id="aic_menu_file_store_id"
              name="File Store IDs"
              parent="aic_menu_configuration"
              action="aic_file_store_id_action"
              sequence="30"
              groups="group_ai_chat_admin"/>


    <!-- =====================================================
         aic.gemini_system_instruction – Form / Tree
         ===================================================== -->

    <record id="aic_gemini_system_instruction_view_form" model="ir.ui.view">
        <field name="name">aic.gemini_system_instruction.form</field>
        <field name="model">aic.gemini_system_instruction</field>
        <field name="arch" type="xml">
            <form string="Gemini System Instruction">
                <sheet>
                    <group>
                        <field name="name" required="1"/>
                    </group>
                    <group>
                        <field name="gemini_system_instruction"
                               placeholder="Persona, guardrails, behaviour..."/>
                    </group>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids"/>
                    <field name="activity_ids"/>
                    <field name="message_ids"/>
                </div>
            </form>
        </field>
    </record>

    <record id="aic_gemini_system_instruction_view_tree" model="ir.ui.view">
        <field name="name">aic.gemini_system_instruction.tree</field>
        <field name="model">aic.gemini_system_instruction</field>
        <field name="arch" type="xml">
            <tree string="Gemini System Instructions">
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record id="aic_gemini_system_instruction_action" model="ir.actions.act_window">
        <field name="name">System Instructions</field>
        <field name="res_model">aic.gemini_system_instruction</field>
        <field name="view_mode">tree,form</field>
        <field name="view_id" ref="aic_gemini_system_instruction_view_tree"/>
        <field name="help" type="html">
            <p>
                Maintain reusable Gemini system instructions / personas.
            </p>
        </field>
    </record>

    <menuitem id="aic_menu_gemini_system_instruction"
              name="System Instructions"
              parent="aic_menu_configuration"
              action="aic_gemini_system_instruction_action"
              sequence="50"
              groups="group_ai_chat_admin"/>

</odoo>
