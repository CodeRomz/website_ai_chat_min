<?xml version="1.0" encoding="UTF-8"?>
<odoo>
  <data>
    <record id="res_config_settings_view_form_inherit_website_ai_chat_min" model="ir.ui.view">
      <field name="name">res.config.settings.view.form.inherit.website.ai.chat.min</field>
      <field name="model">res.config.settings</field>
      <field name="inherit_id" ref="base.res_config_settings_view_form"/>
      <field name="arch" type="xml">
        <xpath expr="//app[@name='website']" position="inside">
          <block id="website_ai_chat_min_block" title="AI Chat (Minimal)" groups="base.group_system,website_ai_chat_min.group_ai_chat_admin">
            <setting string="AI Provider &amp; Model">
              <div class="row">
                <label class="col-3 o_light_label" for="ai_provider"/>
                <field name="ai_provider" class="col-9"/>
              </div>
              <div class="row mt-2">
                <label class="col-3 o_light_label" for="ai_model"/>
                <field name="ai_model" class="col-9" placeholder="gpt-3.5-turbo"/>
              </div>
            </setting>

            <setting string="API Key &amp; Documents">
              <div class="row">
                <label class="col-3 o_light_label" for="ai_api_key"/>
                <field name="ai_api_key" class="col-9" password="True" placeholder="sk-..."/>
              </div>
              <div class="row mt-2">
                <label class="col-3 o_light_label" for="docs_folder"/>
                <field name="docs_folder" class="col-9" placeholder="/opt/odoo/data/pdfs"/>
              </div>
            </setting>

            <setting string="System Instruction">
              <field name="sys_instruction" widget="text" placeholder="Keep answers concise. If unsure, say you donâ€™t know."/>
            </setting>

            <setting string="Allowed Questions (Regex)">
              <field name="allowed_questions" widget="text" placeholder="^what\b
^how\b"/>
            </setting>

            <setting string="Answer Only From Documents">
              <field name="context_only"/>
            </setting>
          </block>
        </xpath>
      </field>
    </record>
  </data>
</odoo>
