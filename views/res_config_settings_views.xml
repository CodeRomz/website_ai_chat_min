<odoo>
    <record id="res_config_settings_view_form_inherit_ai" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.ai.chat</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="website.res_config_settings_view_form"/>

        <field name="arch" type="xml">
            <!-- Append inside Website app (stable anchor in 17.0) -->
            <xpath expr="//app[@name='website']" position="inside">
                <block title="AI Chat (Minimal)" name="website_ai_settings"
                       groups="base.group_system,website_ai_chat_min.group_ai_chat_admin">

                    <!-- Provider -->
                    <setting string="AI Provider">
                        <field name="ai_provider"/>
                    </setting>
                    <setting string="Model">
                        <field name="ai_model"/>
                    </setting>
                    <setting string="API Key">
                        <field name="ai_api_key" password="True"/>
                    </setting>
                    <setting string="System Prompt">
                        <field name="system_prompt"/>
                    </setting>
                    <setting string="Allowed Questions (regex)">
                        <field name="allowed_regex"/>
                    </setting>
                    <setting string="Require Group (XMLID)" help="Example: base.group_user">
                        <field name="require_group_xmlid"/>
                    </setting>

                    <!-- Retrieval -->
                    <setting string="PDF Folder">
                        <field name="docs_folder"/>
                    </setting>
                    <setting string="Answer Only From Documents">
                        <field name="answer_only_from_docs"/>
                    </setting>
                    <setting string="Docs: Max Files">
                        <field name="docs_max_files"/>
                    </setting>
                    <setting string="Docs: Max Pages/File">
                        <field name="docs_max_pages"/>
                    </setting>
                    <setting string="Docs: Max Matches">
                        <field name="docs_max_hits"/>
                    </setting>

                    <!-- Inference controls -->
                    <setting string="AI Timeout (sec)">
                        <field name="ai_timeout"/>
                    </setting>
                    <setting string="AI Temperature">
                        <field name="ai_temperature"/>
                    </setting>
                    <setting string="AI Max Tokens">
                        <field name="ai_max_tokens"/>
                    </setting>
                    <setting string="Redact PII in Prompts">
                        <field name="redact_pii"/>
                    </setting>

                    <!-- UX / Legal / Rate limit -->
                    <setting string="Privacy Policy URL">
                        <field name="privacy_url"/>
                    </setting>
                    <setting string="Rate Limit: Max Requests">
                        <field name="rate_limit_max"/>
                    </setting>
                    <setting string="Rate Limit: Window (sec)">
                        <field name="rate_limit_window"/>
                    </setting>

                </block>
            </xpath>
        </field>
    </record>
</odoo>
